set ruler
" set shiftwidth=8
" set tabstop=4
set showfulltag
set showmatch
" set smarttab
" set shiftwidth=4
set smartcase
" set smartindent
set suffixes=.bak,~,.o,.h,.info,.swp,.obj,,.ppc860,.ppc860_o
set title
set viminfo='50,\"50,%,n~/VIM/viminfo
set visualbell
set whichwrap=b,s,h,l<,>,[,]
